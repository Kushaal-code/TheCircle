extends layout

block content
    #theContent
        if danger
            p.danger-err
                strong #{danger}
        h1 #{title}
        br
        if user
            a.btn.create-btn(href='/articles/add')
                strong + | Add Article
            br
            br
            br
        ul
            each article, i in articles
                li.list-group-item
                    a(href='/articles/'+article._id)= article.title
                    hr
                    p Created by:
                        a(href='/users/'+article.author_id)= article.author